<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Innopixel.Kontrolpanel.MAUI.Views.Home.HomePage"
             xmlns:vm="clr-namespace:Innopixel.Kontrolpanel.MAUI.ViewModels.Home"
             xmlns:model="clr-namespace:Innopixel.Kontrolpanel.Core.Domain;assembly=Innopixel.Kontrolpanel.Core"
             x:DataType="vm:HomeViewModel"
             Title="Forside">

	<ScrollView>
		<VerticalStackLayout Spacing="25" Padding="10, 30" VerticalOptions="Center">
			<Image Source="dotnet_bot.png" HeightRequest="200" HorizontalOptions="Center" />
			<Label Text="{Binding UserName, StringFormat='Velkommen, {0}!'}" FontSize="25" HorizontalOptions="Center" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>